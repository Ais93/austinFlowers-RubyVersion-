<div class ="history">
    <h2>Shopping Cart</h2>
    <br>
    <% total = 0 %>
    
    <% if @cart.empty? %>
        <p class="no_prod">Your cart is empty</p>
    <% else %>
        <%= link_to "Empty Cart" , cart_clear_path,  class: "empty" %>
    <% end %>
        <% @cart.each do |id, quantity| %>
            <% product = Product.find_by_id(id) %>
        
            <ul id ="cart">
                <li><b><%= product.name.humanize %></b></li>
                <li id="price"><%= number_to_currency(product.price, :unit => '€') %></li>
                <li>Quantity: <%= quantity %></li>
                <% total += quantity * product.price %>
            </ul>
        <% end %>
        <br>
        <p id ="total">Total: <%= number_to_currency(total, :unit => '€') %></p>
        <br>
        
        
</div>
