<div class = "history">

<h2>Shopping Cart</h2>
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<br>
<% @cart.order_items.each do |item| %>
    <ul id ="cart">
        <li><b><%= item.product.name.titleize %></b></li>
        <li>Quantity:<%= item.quantity %></li>
        <li id="price"><%= number_to_currency(item.total_price, :unit => '€') %></li>
    </ul>
<% end %>
    <p id="total">Total Price: <%= number_to_currency(@cart.total_price, :unit => '€') %></p>
    <%= button_to 'Empty Cart', @cart, method: :delete,
        :class => "cartButton", data: { confirm: "Are you sure you want to delete?" } %>
</div>