<div class ="full">
    <div class ="formBox">
      <h1>Register New Account</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
  
      <%= f.text_field :name, autofocus: true, placeholder: 'Name' %>

      <%= f.text_field :delivery_address, autofocus: true, placeholder: 'Delivery Address' %>

      <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>

      <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>

      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password' %>


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>


</div>