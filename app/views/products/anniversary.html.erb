<div class="column">
	<h1>Anniversary</h1>
	<ul>
		<% @products.where(category: "anniversary").each do |product| %>
			<li class="medium-3 columns">
					<%= link_to '#', class: "flowers" do %>
           				<%= image_tag product.flowers %>
       				<% end %>
       				<a class ="cartButton" href = "/cart/<%= product.id %>">Add to Cart</a>
			</li>
		<% end %>
	</ul>
</div>

<div style="clear:both;"></div>	