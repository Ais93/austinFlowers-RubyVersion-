<div class="column">
	<h1>Funeral</h1>
	<ul>
		<% @product.where(category: "funeral").each do |product| %>
			<li class="medium-3 columns">
					<%= link_to product_path(@product), class: "flowers" do %>
           				<%= image_tag product.flowers%>
       				<% end %>
       				<a class ="cartButton" href = "/cart/<%= product.id %>">Add to Cart</a>
       				<a href = "/product/<%= product.id %>">Read more</a>
			</li>
		<% end %>
	</ul>
</div>

<div style="clear:both;"></div>	
	
<script>
	
		$('#d11').contenthover({
			overlay_background:'#000',
			overlay_opacity:0.8
		});
</script>